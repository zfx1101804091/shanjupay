<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shanjupay.merchant.mapper.StaffMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.shanjupay.merchant.entity.Staff">
        <id column="ID" property="id"/>
        <result column="MERCHANT_ID" property="merchantId"/>
        <result column="FULL_NAME" property="fullName"/>
        <result column="POSITION" property="position"/>
        <result column="USERNAME" property="username"/>
        <result column="MOBILE" property="mobile"/>
        <result column="STORE_ID" property="storeId"/>
        <result column="LAST_LOGIN_TIME" property="lastLoginTime"/>
        <result column="STAFF_STATUS" property="staffStatus"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        ID, MERCHANT_ID, FULL_NAME, POSITION, USERNAME, MOBILE, STORE_ID, LAST_LOGIN_TIME, STAFF_STATUS
    </sql>

</mapper>
